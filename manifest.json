{
    "manifest_version": 3,
    "name": "UMS - HUSC",
    "version": "1.0.0",
    "description": "UMS - HUSC. A simple extension to help you access UMS - HUSC easier.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://student.husc.edu.vn/TimeTable"
            ],
            "js": [
                "scripts/content_export_to_ics.js"
            ]
        },
        {
            "matches": [
                "*://student.husc.edu.vn/Statistics/HistoryOfStudying"
            ],
            "js": [
                "scripts/content_statistic.js",
                "scripts/content_detail.js"
            ],
            "css": [
                "styles/bootstrap-icons.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/utils.js",
                "scripts/chart.js",
                "scripts/chart.min.js"
            ],
            "matches": [
                "*://student.husc.edu.vn/*"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://student.husc.edu.vn/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}